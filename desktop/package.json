{
  "name": "finsync360-desktop",
  "version": "1.0.0",
  "description": "FinSync360 Desktop Application - Full ERP with Offline Capabilities",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run react:dev\" \"wait-on http://localhost:3002 && electron .\"",
    "react:dev": "cd src/renderer && npm start",
    "react:build": "cd src/renderer && npm run build",
    "build": "npm run react:build && electron-builder",
    "build:win": "npm run react:build && electron-builder --win",
    "build:mac": "npm run react:build && electron-builder --mac",
    "build:linux": "npm run react:build && electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "dev": "npm run electron:dev",
    "start": "npm run electron:dev"
  },
  "keywords": [
    "electron",
    "erp",
    "accounting",
    "inventory",
    "offline",
    "desktop",
    "business"
  ],
  "author": "FinSync360 Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4"
  },
  "build": {
    "appId": "com.finsync360.desktop",
    "productName": "FinSync360 Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/database/schema.sql",
        "to": "database/schema.sql"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "main": "src/main/main.js"
}
