{
  "name": "finsync360-desktop-agent",
  "version": "1.0.0",
  "description": "FinSync360 Desktop Agent for Tally ERP Integration",
  "main": "main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react:dev\" \"wait-on http://localhost:3001 && electron .\"",
    "react:dev": "cd renderer && npm start",
    "react:build": "cd renderer && npm run build",
    "build": "npm run react:build",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:publish": "npm run build && electron-builder --publish=always",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "postinstall": "electron-builder install-app-deps && cd renderer && npm install"
  },
  "build": {
    "appId": "com.finsync360.desktop-agent",
    "productName": "FinSync360 Desktop Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/",
      "src/",
      "assets/",
      "node_modules/"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "owner": "finsync360",
      "repo": "desktop-agent"
    },
    "autoUpdater": {
      "enabled": true
    }
  },
  "dependencies": {
    "electron": "^27.1.3",
    "electron-updater": "^6.1.7",
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.1",
    "node-machine-id": "^1.1.12",
    "crypto-js": "^4.2.0",
    "fast-xml-parser": "^4.3.2",
    "net": "^1.0.2",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "os": "^0.1.2",
    "child_process": "^1.0.2",
    "systeminformation": "^5.21.20",
    "node-notifier": "^10.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "electron-builder": "^24.8.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.5.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@types/node": "^20.10.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "electron",
    "desktop-agent",
    "tally-integration",
    "erp",
    "sync",
    "offline"
  ],
  "author": "FinSync360 Team",
  "license": "MIT"
}
